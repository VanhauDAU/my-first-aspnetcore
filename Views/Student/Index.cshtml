@model MyFirstWebASP.Helpers.PaginatedList<MyFirstWebASP.Models.Student>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách Sinh viên giỏi</h2>
    <a asp-action="Create" class="btn btn-primary"> + Thêm sinh viên mới</a>
</div>
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
               class="form-control" placeholder="Tìm theo tên hoặc địa chỉ..." />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        <a asp-action="Index" class="btn btn-secondary">Xóa bộ lọc</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Họ Tên</th>
            <th>Địa chỉ</th>
            <th>GPA</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Address</td>
                <td>@item.Gpa.ToString("F2")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                    
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" 
                        onsubmit="return confirm('Bạn có chắc chắn muốn xóa sinh viên này?')">
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="d-flex justify-content-between">
    <a asp-action="Index" 
       asp-route-pageNumber="@(Model.PageIndex - 1)" 
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @prevDisabled">
        &larr; Trang trước
    </a>
    
    <span>Trang @Model.PageIndex / @Model.TotalPages</span>

    <a asp-action="Index" 
       asp-route-pageNumber="@(Model.PageIndex + 1)" 
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @nextDisabled">
        Trang sau &rarr;
    </a>
</div>